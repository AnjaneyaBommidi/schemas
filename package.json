{
  "name": "postman-collection",
  "version": "2.0.0-draft.3",
  "private": true,
  "description": "Parses and validates Postman Collection files",
  "keywords": [
    "postman",
    "api",
    "rest",
    "schema",
    "collection"
  ],
  "license": "Apache",
  "author": "Postman Labs <help@getpostman.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/postmanlabs/schemas.git"
  },
  "main": "lib/index.js",
  "bin": {
    "postman-collection": "./bin/postman-collection.js"
  },
  "scripts": {
    "start": "bin/postman-collection.js validate examples/collection/v2.0.0-draft.3/*/index.*",
    "test": "npm run build-schema && npm run validate-schema && npm start",
    "build-schema": "cd yaml && node ../bin/postman-collection.js bundle --no-validate --out ../json collection/v2.0.0-draft.3/index.yaml",
    "validate-schema": "z-schema json/collection/v2.0.0-draft.3/index.json --pedanticCheck --forceAdditional --forceItems --forceMinItems --forceMinLength --forceProperties --noExtraKeywords --noTypeless --strictUris"
  },
  "dependencies": {
    "call-me-maybe": "^1.0.1",
    "commander": "^2.9.0",
    "es6-promise": "^3.0.2",
    "globby": "^4.0.0",
    "json-schema-ref-parser": "^1.4.0",
    "mkdirp": "^0.5.1",
    "ono": "^1.0.22",
    "z-schema": "^3.16.0"
  },
  "devDependencies": {
    "lodash": "^3.10.1"
  }
}
